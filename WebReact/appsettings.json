        {
          "From": 1, // 'From' represents the Dynamics 365 status reason id
          "To": 2 // 'To' represents the Proposal Manager status id
        },
        {
          "From": 2,
          "To": 7
        },
        {
          "From": 3,
          "To": 10
        }
